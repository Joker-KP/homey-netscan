{
    "name": {
        "en": "IP address",
        "nl": "IP adres",
        "de": "IP-Adresse"
    },
    "platforms": [
        "local"
    ],
    "connectivity": [
        "lan"
    ],
    "class": "sensor",
    "capabilities": [
        "alarm_connectivity",
        "onoff"
    ],
    "capabilitiesOptions": {
        "alarm_connectivity": {
            "insightsTitleFalse": {
                "en": "Connection restored",
                "pl": "Połączenie przywrócono"
            },
            "insightsTitleTrue": {
                "en": "Connection lost",
                "pl": "Utracono połączenie"
            }
        },
        "onoff": {
            "preventInsights": true,
            "uiComponent": null
        }
    },
    "images": {
        "large": "assets/drivers/ip_driver/large.png",
        "small": "assets/drivers/ip_driver/small.png"
    },
    "pair": [
        {
            "id": "configure_ip"
        },
        {
            "id": "add_sockets",
            "template": "add_devices"
        }
    ],
    "settings": [
        {
            "type": "group",
            "label": {
                "en": "IP address settings",
                "nl": "IP adres instellingen",
                "de": "IP-Adresseinstellungen"
            },
            "children": [
                {
                    "id": "host",
                    "hint": "IP address of the device to check",
                    "type": "text",
                    "value": "0.0.0.0",
                    "label": {
                        "en": "IP address",
                        "nl": "IP adres",
                        "de": "IP-Adresse"
                    }
                },
                {
                    "id": "host_check_interval",
                    "hint": "Time between checks for the device",
                    "type": "number",
                    "value": 15,
                    "min": 5,
                    "max": 1000,
                    "units": "seconds",
                    "label": {
                        "en": "Check Interval",
                        "nl": "Controleer interval",
                        "de": "Prüfintervall"
                    }
                },
                {
                    "id": "host_timeout",
                    "hint": "Time to wait before reporting the device is offline",
                    "type": "number",
                    "value": 10,
                    "min": 2,
                    "max": 100,
                    "units": "seconds",
                    "label": {
                        "en": "Check Timeout",
                        "nl": "Controleer time-out",
                        "de": "Zeitüberschreitung"
                    }
                },
                {
                    "id": "host_unreachable_checks",
                    "hint": "Number of unreachable failures before reporting the device is offline",
                    "type": "number",
                    "value": 1,
                    "min": 1,
                    "max": 100,
                    "label": {
                        "en": "Unreachable checks",
                        "nl": "Onbereikbare controles",
                        "de": "Anzahl Erreichbarkeits-Prüfungen"
                    }
                }
            ]
        }
    ]
}